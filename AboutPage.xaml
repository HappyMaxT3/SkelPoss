<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechnoPoss.AboutPage"
             Title="О команде"
             BackgroundColor="#1B1818">

    <Grid>

        <Grid.GestureRecognizers>
            <SwipeGestureRecognizer Direction="Right" 
                                  Swiped="OnSwiped"/>
        </Grid.GestureRecognizers>
        
        <ScrollView>
            <VerticalStackLayout Spacing="20">

                <FlexLayout Direction="Row"
                          Wrap="Wrap"
                          JustifyContent="Center"
                          AlignItems="Center"
                          Padding="20"
                          BindableLayout.ItemsSource="{Binding Developers}">

                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout 
                                Margin="20" 
                                HorizontalOptions="Center" 
                                VerticalOptions="Start">

                                <Frame 
                                    WidthRequest="150"
                                    HeightRequest="150"
                                    CornerRadius="75"
                                    Padding="0"
                                    HasShadow="True"
                                    BorderColor="#343434"
                                    IsClippedToBounds="True">

                                    <Image 
                                        Source="{Binding Photo}"
                                        Aspect="AspectFill"
                                        WidthRequest="150"
                                        HeightRequest="150"/>
                                </Frame>

                                <Label 
                                    Text="{Binding Name}"
                                    FontSize="16"
                                    TextColor="#A0A0A0"
                                    HorizontalOptions="Center"
                                    Margin="0,10,0,0"/>

                                <Label 
                                    Text="{Binding Role}"
                                    FontSize="14"
                                    TextColor="#A0A0A0"
                                    HorizontalOptions="Center"/>

                            </VerticalStackLayout>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>

                <VerticalStackLayout Spacing="15" 
                                   HorizontalOptions="Center" 
                                   Padding="20,0">
                    <Label Text="О проекте"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#A0A0A0"
                           HorizontalOptions="Center"/>

                    <Label Text="В рамках проекта по разработке бытовой техники была проведена серия работ, направленных на улучшение функциональности и удобства использования продукции. В первую очередь, осуществлено проектирование и тестирование новых моделей кухонных приборов, включая интеллектуальные мультиварки и энергоэффективные холодильники."
                           FontSize="16"
                           TextColor="#A0A0A0"
                           HorizontalOptions="Fill"
                           HorizontalTextAlignment="Center"
                           Width="600"
                           LineBreakMode="WordWrap"/>
                    <BoxView HeightRequest="50" Color="#1B1818"/>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>