<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TechnoPoss.NewsPage"
             BackgroundColor="#1B1818">
    <ScrollView x:Name="MainScroll">
        <StackLayout Padding="10">
            <!-- Жесты свайпа -->
            <StackLayout.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Down" Swiped="OnSwiped"/>
                <SwipeGestureRecognizer Direction="Right" Swiped="OnSwiped"/>
            </StackLayout.GestureRecognizers>

            <!-- Заголовок -->
            <Label Text="News" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="White" />
            <Label Text="📢 Latest news and articles..." 
                   TextColor="#A0A0A0" />

            <!-- Индикатор загрузки -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsVisible="False"
                               IsRunning="False"
                               Color="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               HeightRequest="50"
                               WidthRequest="50"/>

            <!-- Контейнер для новостей с адаптивной шириной -->
            <Grid HorizontalOptions="Center"
                  WidthRequest="{Binding Source={x:Reference MainScroll}, Path=Width}"
                  MaximumWidthRequest="{OnPlatform Default=-1, WinUI=800, MacCatalyst=800}">
                <StackLayout x:Name="NewsContainer" 
                             Spacing="10"
                             VerticalOptions="Start"
                             HorizontalOptions="Fill"/>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentPage>